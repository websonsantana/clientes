    <script>
        const api = 'api.php?action=';
        let boardData = { lists: [], users: [] };
        let editingCardId = null;
        let editingListId = null;

        // Funções de API
        async function fetchData(url) {
            const res = await fetch(url);
            if (!res.ok) throw new Error('Network error');
            return await res.json();
        }

        async function postData(url, data) {
            const res = await fetch(url, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            });
            return await res.json();
        }

        // Carregar Board
        async function loadBoard() {
            try {
                const data = await fetchData(api + 'get_data');
                boardData = data;
                renderBoard();
                hideLoading();
            } catch (error) {
                console.error('Error loading board:', error);
                alert('Erro ao carregar dados. Verifique a conexão.');
            }
        }

        // Renderizar Board
        function renderBoard() {
            const board = document.getElementById('board');
            board.innerHTML = '';
            
            boardData.lists.forEach(list => {
                const listDiv = document.createElement('div');
                listDiv.className = 'list fade-in';
                listDiv.style.backgroundColor = list.color || '#ebecf0';
                
                const isEditing = editingListId === list.id;
                
                listDiv.innerHTML = `
                    <div class="list-header">
                        ${isEditing ? `
                            <input type="text" class="list-title-input" value="${list.title}" 
                                   onblur="updateListTitle(${list.id}, this)" 
                                   onkeypress="if(event.key=='Enter') this.blur()" autofocus>
                        ` : `
                            <div class="list-title" onclick="editListTitle(${list.id})">${list.title}</div>
                        `}
                        <div class="list-actions">
                            <input type="color" class="list-color-picker" value="${list.color || '#ebecf0'}" 
                                   onchange="updateListColor(${list.id}, this.value)">
                            <span class="list-count">${list.cards?.length || 0}</span>
                            <button class="action-btn" onclick="deleteList(${list.id})" title="Excluir Lista">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    <div class="cards-container" data-list-id="${list.id}"></div>
                    <button class="add-btn" onclick="showCardModal(${list.id})">
                        <i class="fas fa-plus"></i> Adicionar Card
                    </button>
                `;
                
                const container = listDiv.querySelector('.cards-container');
                list.cards?.forEach(card => renderCard(card, container));
                
                board.appendChild(listDiv);
                
                // Configurar Sortable
                new Sortable(container, {
                    group: 'shared',
                    animation: 150,
                    ghostClass: 'ghost-card',
                    onEnd: async (evt) => {
                        const cardIds = Array.from(evt.to.children).map(c => c.dataset.id);
                        await postData(api + 'move_card', {
                            list_id: evt.to.dataset.listId,
                            cards: cardIds
                        });
                    }
                });
            });
            
            // Botão para nova lista
            const newListBtn = document.createElement('button');
            newListBtn.className = 'new-list-btn';
            newListBtn.innerHTML = '<i class="fas fa-plus"></i> Nova Lista';
            newListBtn.onclick = addNewList;
            board.appendChild(newListBtn);
        }

        // Renderizar Card
        function renderCard(card, container) {
            const cardDiv = document.createElement('div');
            cardDiv.className = `card priority-${getPriorityClass(card.priority)}`;
            cardDiv.dataset.id = card.id;
            cardDiv.style.backgroundColor = card.bg_color || '#ffffff';
            cardDiv.style.color = card.font_color || '#333333';
            
            const dueDate = card.due_date ? new Date(card.due_date) : null;
            const today = new Date();
            today.setHours(0, 0, 0, 0);
            
            let dueDateClass = 'due-date';
            if (dueDate) {
                if (dueDate < today) dueDateClass += ' overdue';
                else if (dueDate.getTime() === today.getTime()) dueDateClass += ' today';
            }
            
            const doneSubtasks = card.subtasks?.filter(s => s.is_done).length || 0;
            const totalSubtasks = card.subtasks?.length || 0;
            const progressPercent = totalSubtasks > 0 ? (doneSubtasks / totalSubtasks) * 100 : 0;
            
            const assignmentsHtml = card.assignments?.map(user => `
                <div class="avatar" style="background-color: ${user.avatar_color}" title="${user.name}">
                    ${user.name.charAt(0).toUpperCase()}
                </div>
            `).join('') || '';
            
            const labelsHtml = card.labels_array?.map(label => `
                <span class="label" style="background-color: ${getRandomColor(label)}" title="${label}">
                    ${label}
                </span>
            `).join('') || '';
            
            cardDiv.innerHTML = `
                <div class="card-header">
                    <div class="card-title" onclick="showCardDetail(${card.id})">
                        ${card.content}
                    </div>
                    <div class="card-actions">
                        <button class="action-btn" onclick="showCardModal(null, ${card.id})" title="Editar">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn" onclick="deleteCard(${card.id})" title="Excluir">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                
                ${labelsHtml ? `<div class="labels-container">${labelsHtml}</div>` : ''}
                
                ${assignmentsHtml ? `<div class="assignments">${assignmentsHtml}</div>` : ''}
                
                ${totalSubtasks > 0 ? `
                    <div class="subtasks-progress">
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: ${progressPercent}%"></div>
                        </div>
                        <span>${doneSubtasks}/${totalSubtasks}</span>
                    </div>
                ` : ''}
                
                <div class="card-footer">
                    <div class="card-meta">
                        ${dueDate ? `
                            <span class="${dueDateClass}">
                                <i class="far fa-calendar"></i> ${formatDate(dueDate)}
                            </span>
                        ` : ''}
                        ${card.comments?.length > 0 ? `
                            <span><i class="far fa-comment"></i> ${card.comments.length}</span>
                        ` : ''}
                    </div>
                </div>
            `;
            
            container.appendChild(cardDiv);
        }

        // Funções de Lista
        async function addNewList() {
            const title = prompt('Nome da nova lista:', 'Nova Lista');
            if (!title) return;
            
            const color = '#' + Math.floor(Math.random()*16777215).toString(16);
            await postData(api + 'add_list', { title, color });
            loadBoard();
        }

        function editListTitle(listId) {
            editingListId = listId;
            renderBoard();
        }

        async function updateListTitle(listId, input) {
            const newTitle = input.value.trim();
            if (newTitle && newTitle !== boardData.lists.find(l => l.id == listId)?.title) {
                await postData(api + 'update_list', { id: listId, title: newTitle });
            }
            editingListId = null;
            loadBoard();
        }

        async function updateListColor(listId, color) {
            await postData(api + 'update_list', { id: listId, color });
            loadBoard();
        }

        async function deleteList(listId) {
            if (!confirm('Tem certeza que deseja excluir esta lista e todos os seus cards?')) return;
            await postData(api + 'delete_list', { id: listId });
            loadBoard();
        }

        // Funções de Card
        function showCardModal(listId, cardId = null) {
            const modal = document.getElementById('cardModal');
            editingCardId = cardId;
            
            if (cardId) {
                // Editar card existente
                const card = findCardById(cardId);
                if (card) {
                    document.getElementById('cardId').value = card.id;
                    document.getElementById('cardListId').value = card.list_id;
                    document.getElementById('cardTitle').value = card.content;
                    document.getElementById('cardDescription').value = card.description || '';
                    document.getElementById('cardLabels').value = card.labels || '';
                    document.getElementById('bgColor').value = card.bg_color || '#ffffff';
                    document.getElementById('fontColor').value = card.font_color || '#333333';
                    document.getElementById('dueDate').value = card.due_date || '';
                    
                    // Prioridade
                    document.querySelectorAll('input[name="priority"]').forEach(radio => {
                        radio.checked = radio.value == (card.priority || 3);
                    });
                    
                    // Atribuições
                    renderAssignments(card.assignments);
                }
            } else {
                // Novo card
                document.getElementById('cardForm').reset();
                document.getElementById('cardListId').value = listId;
                document.getElementById('bgColor').value = '#ffffff';
                document.getElementById('fontColor').value = '#333333';
                document.querySelector('input[name="priority"][value="3"]').checked = true;
                renderAssignments([]);
            }
            
            modal.classList.add('active');
        }

        async function saveCard() {
            const cardData = {
                list_id: document.getElementById('cardListId').value,
                content: document.getElementById('cardTitle').value,
                bg_color: document.getElementById('bgColor').value,
                font_color: document.getElementById('fontColor').value,
                due_date: document.getElementById('dueDate').value || null,
                priority: document.querySelector('input[name="priority"]:checked').value,
                labels: document.getElementById('cardLabels').value,
                assignments: Array.from(document.querySelectorAll('#assignmentsContainer input:checked'))
                    .map(input => input.value)
            };
            
            if (!cardData.content.trim()) {
                alert('O título do card é obrigatório!');
                return;
            }
            
            if (editingCardId) {
                cardData.id = editingCardId;
                await postData(api + 'update_card', cardData);
                
                // Atualizar atribuições
                await postData(api + 'update_card_assignments', {
                    card_id: editingCardId,
                    user_ids: cardData.assignments
                });
            } else {
                await postData(api + 'add_card', cardData);
            }
            
            closeModal('cardModal');
            loadBoard();
        }

        async function deleteCard(cardId) {
            if (!confirm('Tem certeza que deseja excluir este card?')) return;
            await postData(api + 'delete_card', { id: cardId });
            loadBoard();
        }

        function showCardDetail(cardId) {
            const card = findCardById(cardId);
            if (!card) return;
            
            showCardModal(null, cardId);
        }

        // Funções Auxiliares
        function findCardById(cardId) {
            for (const list of boardData.lists) {
                const card = list.cards?.find(c => c.id == cardId);
                if (card) return { ...card, list_id: list.id };
            }
            return null;
        }

        function getPriorityClass(priority) {
            switch (parseInt(priority)) {
                case 1: return 'high';
                case 2: return 'medium';
                case 3: 
                default: return 'low';
            }
        }

        function getRandomColor(str) {
            const colors = [
                '#eb5a46', '#ff9f1a', '#61bd4f', 
                '#00c2e0', '#0079bf', '#c377e0',
                '#ff78cb', '#51e898', '#ffcc00'
            ];
            let hash = 0;
            for (let i = 0; i < str.length; i++) {
                hash = str.charCodeAt(i) + ((hash << 5) - hash);
            }
            return colors[Math.abs(hash) % colors.length];
        }

        function formatDate(date) {
            return date.toLocaleDateString('pt-BR');
        }

        function renderAssignments(assignments) {
            const container = document.getElementById('assignmentsContainer');
            container.innerHTML = '';
            
            boardData.users.forEach(user => {
                const isAssigned = assignments.some(a => a.id == user.id);
                container.innerHTML += `
                    <label style="display: flex; align-items: center; gap: 4px;">
                        <input type="checkbox" value="${user.id}" ${isAssigned ? 'checked' : ''}>
                        <div class="avatar" style="background-color: ${user.avatar_color}">
                            ${user.name.charAt(0).toUpperCase()}
                        </div>
                        <span>${user.name}</span>
                    </label>
                `;
            });
        }

        // Funções de Modal
        function showStatsModal() {
            const stats = calculateStats();
            const modal = document.getElementById('statsModal');
            document.getElementById('statsContent').innerHTML = `
                <div style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 20px;">
                    <div style="background: #f0f9ff; padding: 20px; border-radius: 10px;">
                        <h4>Total de Cards</h4>
                        <div style="font-size: 32px; font-weight: bold; color: #0079bf;">${stats.totalCards}</div>
                    </div>
                    <div style="background: #f0fff4; padding: 20px; border-radius: 10px;">
                        <h4>Cards Concluídos</h4>
                        <div style="font-size: 32px; font-weight: bold; color: #61bd4f;">${stats.completedCards}</div>
                    </div>
                    <div style="background: #fffaf0; padding: 20px; border-radius: 10px;">
                        <h4>Cards Atrasados</h4>
                        <div style="font-size: 32px; font-weight: bold; color: #eb5a46;">${stats.overdueCards}</div>
                    </div>
                    <div style="background: #f5f0ff; padding: 20px; border-radius: 10px;">
                        <h4>Média por Lista</h4>
                        <div style="font-size: 32px; font-weight: bold; color: #764ba2;">${stats.avgPerList}</div>
                    </div>
                </div>
            `;
            modal.classList.add('active');
        }

        function showSettingsModal() {
            const modal = document.getElementById('settingsModal');
            modal.classList.add('active');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('active');
            editingCardId = null;
            editingListId = null;
        }

        function hideLoading() {
            document.getElementById('loading').style.display = 'none';
        }

        function calculateStats() {
            let totalCards = 0;
            let completedCards = 0;
            let overdueCards = 0;
            
            boardData.lists.forEach(list => {
                totalCards += list.cards?.length || 0;
                
                if (list.title.toLowerCase().includes('concluído')) {
                    completedCards += list.cards?.length || 0;
                }
                
                list.cards?.forEach(card => {
                    if (card.due_date) {
                        const dueDate = new Date(card.due_date);
                        const today = new Date();
                        today.setHours(0, 0, 0, 0);
                        if (dueDate < today && !list.title.toLowerCase().includes('concluído')) {
                            overdueCards++;
                        }
                    }
                });
            });
            
            return {
                totalCards,
                completedCards,
                overdueCards,
                avgPerList: boardData.lists.length > 0 ? (totalCards / boardData.lists.length).toFixed(1) : 0
            };
        }

        // Inicializar
        document.addEventListener('DOMContentLoaded', () => {
            loadBoard();
            
            // Fechar modal ao clicar fora
            document.querySelectorAll('.modal').forEach(modal => {
                modal.addEventListener('click', (e) => {
                    if (e.target === modal) {
                        modal.classList.remove('active');
                    }
                });
            });
        });
    </script>
</body>
</html>